<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dt="clr-namespace:DtControls.UserControls;assembly=DtControls"
             x:Class="MauiDtControlSample.MainPage"
             Appearing="ContentPage_Appearing"
             Loaded="ContentPage_Loaded"
             Title="">
    <Grid>
        <dt:DtNavigationView x:Name="NavView" 
                             Grid.Column="0"
                             Grid.Row="0"
                             IsBackButtonEnabled="True" 
                             IsBackButtonVisable="Auto" 
                             IsSettingsVisible="True"
                             PaneDisplayMode="LeftCompact">

            <dt:DtWindowTabView x:Name="WindowTabView" Loaded="WindowTabView_Loaded">

            </dt:DtWindowTabView>

        </dt:DtNavigationView>
    </Grid>
</ContentPage>